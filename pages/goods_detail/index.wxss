/* pages/goods_detail/index.wxss */
.detail_swiper swiper {
  height: 70vw;
  text-align: center;
}
.detail_swiper swiper image {
  height: 100%;
  width: 80%;
}
.goods_price {
  color: #3d84a8;
}
.goods_name_row {
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
  display: flex;
}
.goods_name_row .goods_name {
  flex: 5;
  color: #000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  text-align: center;
  border-left: 1rpx solid #000;
}
.goods_name_row .goods_collect .icon-shoucangsel-copy {
  color: orangered;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  color: #3d84a8;
  font-weight: 600;
  padding: 20rpx;
}
.tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.tool .tool_item {
  position: relative;
  flex: 1;
  text-align: center;
  padding-top: 15rpx;
}
.tool .tool_item .icon-kefu1 {
  color: #f38181;
}
.tool .tool_item .icon-fenxiang1 {
  color: #ffc93c;
}
.tool .tool_item .icon-gouwuche {
  color: #61c0bf;
}
.tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.tool .btn_cart {
  flex: 2;
  background-color: #aa96da;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
.tool .btn_buy {
  flex: 2;
  background-color: #61c0bf;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
