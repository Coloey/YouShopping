/* pages/user/index.wxss */
.user_Info_wrap {
  position: relative;
  width: 100%;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user_Info_wrap .user_img_wrap {
  position: relative;
}
.user_Info_wrap .user_img_wrap .user_bg {
  position: absolute;
  height: 50vh;
  z-index: 1;
  filter: blur(10rpx);
}
.user_Info_wrap .user_img_wrap .user_info {
  position: absolute;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  left: 50%;
  margin-left: -100rpx;
  margin-top: 150rpx;
}
.user_Info_wrap .user_img_wrap .user_info .user_icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user_Info_wrap .user_img_wrap .user_info .user_name {
  font-size: 35rpx;
  color: white;
}
.user_Info_wrap .user_btn {
  position: absolute;
  border: 1rpx solid #dedede;
  padding: 20rpx 60rpx;
  border-radius: 15rpx;
  width: 200rpx;
  height: 80rpx;
  color: #fff;
  text-align: center;
  left: 40%;
  translate: translateX(-50%);
  top: 40%;
}
.user_content {
  position: relative;
  background: #f5f5f5;
  height: 900rpx;
  z-index: 1;
}
.user_content .user_main {
  position: absolute;
  z-index: 2;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .history_wrap {
  border-radius: 15rpx;
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_content .user_main .order_wrap {
  border-radius: 15rpx;
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .user_main .order_wrap .order_title {
  padding: 20rpx;
  border-bottom: 2rpx solid #dedede;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
}
.user_content .user_main .order_wrap .order_content navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
}
.user_content .user_main .order_wrap .order_content navigator .icon-dindan {
  color: #f38181;
}
.user_content .user_main .order_wrap .order_content navigator .icon-fukuanguanli {
  color: #ffc93c;
}
.user_content .user_main .order_wrap .order_content navigator .icon-a-shouhuodizhi {
  color: #07689f;
}
.user_content .user_main .order_wrap .order_content navigator .icon-a-tuihuotuikuan {
  color: #a2d5f2;
}
.user_content .user_main .address_wrap {
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 15rpx;
}
.user_content .user_main .app_info_wrap {
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 15rpx;
  border-bottom: 2rpx solid #dedede;
}
.user_content .user_main .app_info_wrap .app_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 15rpx;
}
